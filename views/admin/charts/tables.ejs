<% layout('admin') -%>
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="page-header">
				<h2><i class="fa fa-table fa-fw"></i> Raportit taulukkoina <small class="pull-right"><%= moment(Date.now()).locale("fi").format('DD.MM.YYYY') %></small></h2>
			</div>
		</div>
	</div>	
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<h3>Kappalemäärät genreittäin</h3>
