				<thead>
					<tr id="reportHeading">
						<th class="col-md-6">Genre</th>
						<th class="col-md-6">Määrä</th>
					</tr>
				</thead>
				<tbody id="dataRow">
					
				</tbody>
				<tfoot>
					<tr>
						<td class="col-md-6">
							Yhteensä:
						</td>
						<td>
							<%= count %> tuotetta				
						</td>
					</tr>
				</tfoot>
			</table>
		</div>
	</div>
</div>